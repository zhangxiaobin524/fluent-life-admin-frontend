import clsx from 'clsx';

interface MenuItem {
  key: string;
  label: string;
  icon: React.ComponentType<{ className?: string }>;
  path?: string;
  children?: MenuItem[];
  group?: boolean; // 是否为分组标题
}

const menuItems: MenuItem[] = [
  {
    key: 'dashboard',
    label: '数据概览',
    icon: LayoutDashboard,
    path: '/',
  },
  {
    key: 'users',
    label: '用户管理',
    icon: Users,
    path: '/users',
  },
  {
    key: 'community',
    label: '社区管理',
    icon: CommunityGroup,
    group: true,
    children: [
      {
        key: 'posts',
        label: '帖子管理',
